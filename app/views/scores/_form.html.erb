<%= form_for([@game,@game.scores.build]) do |f| %>
	<%if(@person.nil?)%>
	  <div><br><b>New? What's your name?</b> <%= f.text_field :person %></div><br>
	<%else%>
	  <div>Cracking good show, <%= @person.name %><br>
	    <%= hidden_field_tag "score[person_id]", @person.id%>
	  </div>
	<%end%>
    <div><br><br><br>
    <b><%=@eventDescription%></b>
    <ul>
    <% if(@rule1 != "")%>
    <li><%=@rule1%></li>
    <% end %>
    <% if(@rule2 != "")%>
    <li><%=@rule2%></li>
    <% end %>
    <% if(@rule3 != "")%>
    <li><%=@rule3%></li>
    <% end %>
    </ul>


    </div>
	  <div>
		<b>Cast your vote:</b> <%= f.collection_select :event, @events, :id, :name %>
		<%= hidden_field_tag "score[rank]", @rank %>
	  </div>

  <div class="actions">
    <%= f.submit "Vote" %>
  </div>
<% end %>
